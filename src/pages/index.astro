---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <article class="p-8">
    <h1 class="text-xl uppercase">Knapper</h1>
    <section class="grid grid-cols-2">
      <div class="my-8 mx-8">
        <Button variant="primary" size="small">Knaptekst</Button>
        <Button variant="primary" size="medium">Knaptekst</Button>
        <Button variant="primary" size="large">Knaptekst</Button>
      </div>
      <div class="my-8 mx-8">
        <Button variant="secondary" size="small">Knaptekst</Button>
        <Button variant="secondary" size="medium">Knaptekst</Button>
        <Button variant="secondary" size="large">Knaptekst</Button>
      </div>
    </section>
  </article>
</MainLayout>
